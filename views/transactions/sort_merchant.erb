<table>
  <div class="table">
<tr>
  <th>Merchant</th>
  <th>Category</th>
  <th>Transaction Value</th>
  <th>Purchase Date</th>
  <th>Detail</th>
</tr>
  <% @transactions.each do |transaction| %>
  <tr>
  <td><%= transaction.merchant.name %></td>
  <td><%= transaction.tag.name %></td>
  <td><%= "£#{transaction.value}" %></td>
  <td><%= transaction.order_date %></td>
  <td><a href="/transactions/<%= transaction.id %>">Show Details</a></td>
  </tr>
  <% end %>
    </div>
</table>

<hr>

  <div class="drop-list">
    <button class="drop-button">Dropdown</button>
    <div class="dropdown-content">
      <% @merchant.each do |merchant| %>
        <a href="/transactions/sort-merchant/<%= merchant.name %>"><%= merchant.name %></a>
      <% end %>
    </div>
  </div>

</div>


<div class="total-spend">
<p>Total Spending YTD : <%= "£#{@transactions_total}" %></p>
</div>
