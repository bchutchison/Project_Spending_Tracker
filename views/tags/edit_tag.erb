<h2>Modify Category Information</h2>
<form action="/tags/<%= @tags.id %>/change-tag" method="post">

  <div class="form-wrapper">

    <div class="form-element">
      <label for="name">Category Name :</label>
      <input type="text" name="name" id="name" value="<%= @tags.name %>">
    </div>

    <div class="button-element">
      <input type="submit" value="Save Changes">
    </div>

  </div>
</form>
