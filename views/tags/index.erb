<h2>Category Information</h2>
<% @tags.each do |tag| %>
<p>Category : <%= tag.name %></p>


<div class="flex_container">
  <a class="button_element button_orange" href="/tags/<%= tag.id %>/edit-tag">Edit Category</a>

  <form onsubmit="return confirm('Be aware that deleting a category linked to a transaction will delete all associated data. Are you sure you want to delete this category?')" action="/tags/<%= tag.id %>/delete-tag" method="post"><input class="button_element button_red" type="submit" value="Delete"></form>
</div>

<hr>
<% end %>
