<h2>Modify Merchant Information</h2>
<form action="/merchants/<%= @merchants.id %>/change-merchant" method="post">

  <div class="form-wrapper">

    <div class="form-element">
      <label for="name">Merchant Name :</label>
      <input type="text" name="name" id="name" value="<%= @merchants.name %>">
    </div>

    <div class="button-element">
      <input class="button_element button_green" type="submit" value="Save Changes">
    </div>

  </div>
</form>
