<% total = 0 %>

<% @transactions.each do |transaction| %>
<!-- <tr>
  <td></td>
</tr> -->
<p>Merchant : <%= transaction.merchant.name %></p>
<p>Category : <%= transaction.tag.name %></p>
<p>Total value : £<%= transaction.value %></p>
<p>Total value : <%= transaction.order_date %></p>
<% total += transaction.value %>
<p><a href="/transactions/<%= transaction.id %>">Show Detail</a></p>
<hr>
<% end %>

<div class="total-spend">
<p>Total Spending YTD : <%="£#{total}"%></p>
</div>

<div class="total-spend">
<p>Total Spending YTD : <%= "£#{@transactions_total}" %></p>
</div>
